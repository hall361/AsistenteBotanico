<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"> <!-- Cambia el color de fondo segÃºn lo desees -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/splash_size"
        android:layout_height="@dimen/splash_size"
        android:layout_centerInParent="true"
        android:src="@drawable/your_logo" /> <!-- Reemplaza 'your_logo' con el nombre de tu archivo de imagen -->

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:textColor="@android:color/black" />
</RelativeLayout>
