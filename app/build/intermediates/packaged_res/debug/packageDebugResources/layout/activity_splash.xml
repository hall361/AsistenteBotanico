<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/splash_size"
        android:layout_height="@dimen/splash_size"
        android:layout_centerInParent="true"
        android:contentDescription="@string/fullscreen_icon_description"
        android:src="@drawable/botanical_assistant_img" />

    <FrameLayout
        android:id="@+id/raindrop_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />
</RelativeLayout>
